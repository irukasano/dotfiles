[user]
	name = sano
	email = sano@iruka-system.co.jp
[credential]
    helper = cache --timeout=21600
[core]
    quotepath = false
    safecrlf = true
    autoCRLF = false
    editor = vim
[color]
    diff = always
	status = always
	branch = always
[http]
	sslVerify = false
[pull]
	rebase = false
[push]
	default = simple
    followTags = true
[alias]
    glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
[status]
    showUntrackedFiles = all

